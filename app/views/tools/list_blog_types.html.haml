%table#list_blog_types
	.head1 分类列表
	%tr
		%td 分类名称
		%td 创建日期
		%td 文章数
		%td 操作
	%tr
		%td= link_to "默认分类", blogs_path(:blog_type_id => 0)
		%td ----
		%td= @default_blogs.count
		
	- @blog_types.each do |type|
		%tr
			%td= link_to type.name, blogs_path(:blog_type_id => type.id)
			%td= type.created_at.to_date
			%td= type.blogs_count
			%td
				= link_to "修改", edit_blog_type_tools_path(:blog_type_id => type.id)
				= link_to "删除", delete_blog_type_tools_path(:blog_type_id => type.id)
.pagination= will_paginate @blog_types